<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="examen01" transaction-type="RESOURCE_LOCAL">
	    <class>com.distribuida.dto.Singer</class>
	    <properties>
	        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
	        <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
	        <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/examen01"/>
	        <property name="javax.persistence.jdbc.user" value="distribuida"/>
	        <property name="javax.persistence.jdbc.password" value="distribuida"/>
	    </properties>
	</persistence-unit>
</persistence>